def count_words(string):
    split_string = replace.split()
    word_dict = {}
    for word in split_string:
        if (word not in word_dict):
            word_dict[word] = 1
        else:
            word_dict[word] +=1
    for key, value in word_dict.items():
        print ("{} {}".format(key,value))

